\begin{frame}{Construcci\'on}
	\begin{empheq}[box={\Garybox[Construcci\'on]}]{align*}
		\varepsilon^{2} 
		& =
			\delta
		\\
		Y_{\delta, \varepsilon}(t)
		& 
			\xrightarrow[\delta, \varepsilon \to 0]{%
				\mathcal{D}
			} B(t) 
			\qquad \forall t 
			\geq 0
			\\
		\EX{
			e^{i\lambda B(t)}
		}
		&
		\xrightarrow{\delta ,\varepsilon \to 0}
			e^{
				-\frac{1}{2}t
				\lambda^{2}
			}, \quad \lambda \in 	\mathbb{R}.
	\end{empheq}
\end{frame}
