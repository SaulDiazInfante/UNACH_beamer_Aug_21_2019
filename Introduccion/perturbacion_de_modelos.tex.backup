    		\column{.5\textwidth}
			\only<2-3>{		
			\begin{exampleblock}{Crecimiento de Poblaciones}
				$$
					\frac{dN}{dt}=a(t)N(t) \qquad N_0=N(0)=cte.
				$$
			\end{exampleblock}	
			}		
			\only<4-8>{	
			\begin{exampleblock}{Circuitos Eléctricos}
			\begin{align*}
				&L\cdot Q''(t)+
				R\cdot Q'(t)+
				\frac{1}{C}\cdot Q(t)
				=F(t)\\
				&Q(0)=Q_0\\
				&Q'(0)=I_0
			\end{align*}				
		\end{exampleblock}	
		}
		\only<7-8>{
		\begin{empheq}[box=\shadowbox*]{equation*}					
			Q(t)=Z(t)+"ruido"		
		\end{empheq}		
		}		
